<p id="notice"><%= notice %></p>

<% if @accounts.present? %>
  <h1>Encerramento de Conta</h1>

  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Número da Conta</th>
        <th>Saldo</th>
        <th>Encerrar</th>
      </tr>
    </thead>

    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td><%= account.number %></td>
          <td><%= number_to_currency account.balance %></td>
          <td id="close_button">
            <%= switch_button_close(account) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="page-header">
    <h1> Você não possue conta aberta. Deja criar uma
      <%= link_to 'criar conta', new_account_path %> ?
    </h1>
  </div>
<% end %>
